// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ========================================
// ENUMS
// ========================================

enum Gender {
  MASCULINO
  FEMININO
  KIDS
}

enum ProductType {
  SAPATO
  SANDALIA
  OUTRO
}

// ========================================
// MODELOS
// ========================================

model Marca {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String?   @unique
  createdAt DateTime  @default(now())

  products  Product[]
}

model Product {
  id           Int            @id @default(autoincrement())
  title        String
  description  String?
  price        Float
  gender       Gender
  productType  ProductType
  marcaId      Int?
  marca        Marca?         @relation(fields: [marcaId], references: [id])
  images       ProductImage[] // ðŸ‘ˆ ADICIONE ESTA LINHA
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model ProductImage {
  id         Int      @id @default(autoincrement())
  filename   String
  url        String
  productId  Int
  product    Product   @relation(fields: [productId], references: [id])
}
