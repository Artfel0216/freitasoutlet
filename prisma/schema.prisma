generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  price       Float
  quantity    Int
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  images      ProductImage[] 
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  url       String
  altText   String?
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  createdAt DateTime @default(now())
}
