// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// datasource: adiciona url via env para compatibilidade com seu CLI atual
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ========================================
// ENUMS
// ========================================

enum Gender {
  MASCULINO
  FEMININO
  KIDS
}

enum ProductType {
  SAPATO
  SANDALIA
  OUTRO
}

// ========================================
// MODELOS EXISTENTES
// ========================================

model Marca {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String?   @unique
  createdAt DateTime  @default(now())

  products  Product[]
}

model Product {
  id           Int            @id @default(autoincrement())
  title        String
  description  String?
  price        Float
  gender       Gender
  productType  ProductType
  marcaId      Int?
  marca        Marca?         @relation(fields: [marcaId], references: [id])
  images       ProductImage[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model ProductImage {
  id         Int      @id @default(autoincrement())
  filename   String
  url        String
  productId  Int
  product    Product   @relation(fields: [productId], references: [id])
}

// ========================================
// NOVO MODELO DE USU√ÅRIO (LOGIN/REGISTRO)
// ========================================

model User {
  id            String   @id @default(cuid())
  firstName     String
  lastName      String
  email         String   @unique
  password      String
  address       String
  number        String
  city          String
  state         String
  cep           String
  image         String?
  provider      String // "google", "facebook" ou "credentials"
  createdAt     DateTime @default(now())
}

model Order {
  id            Int      @id @default(autoincrement())
  productId     Int
  transactionId String
  email         String
  amount        Float
  status        String
  createdAt     DateTime @default(now())
}

