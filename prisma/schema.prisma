generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url    = "file:./dev.db"
}



model ProductMasculino {
  id          Int       @id @default(autoincrement())
  title       String    @default("Sem título")
  description String?
  filename    String
  category    String?
  url         String?
  path        String?
  mime        String?
  size        Int?
  price       Float?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

